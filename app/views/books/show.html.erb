
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile',user:current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book  %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book1.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book1.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book1.title, @book1 %></td>
					<td><%= @book1.body %></td>
					<td><%= link_to "Edit",edit_book_path(@book1), class: "btn-sm btn-success edit_book_#{@book1.id}" %></td>
					<td><%= link_to "Destroy",@book1, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book1.id}" %></td>
				</tr>
			</table>

	</div>
</div>

